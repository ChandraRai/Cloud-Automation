@page
@model RoleAuth.Pages.EmployeeTypes.CreateModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create Employee Type</h1>
<br />
<br />
<form method="post">
	<div class="border backgroundwhite">
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="EmployeeType.Name"></label>
			</div>
			<div class="col-5">
				<input asp-for="EmployeeType.Name" class="form-control" />
			</div>
			<span asp-validation-for="EmployeeType.Name" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="EmployeeType.PayType"></label>
			</div>
			<div class="col-5">
				<input asp-for="EmployeeType.PayType" class="form-control" />
			</div>
			<span asp-validation-for="EmployeeType.PayType" class="text-danger"></span>
		</div>
		<div class="form-group row">
			<div class="col-5 offset-2">
				@*<partial name="_CreateAndBackToListButton" />*@
				<div class="row">
					<div class="col-6">
						<input type="submit" class="btn btn-info form-control" value="Create" />
					</div>
					<div class="col-6">
						<a asp-page="Index" class="btn btn-success form-control">Back to List</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

